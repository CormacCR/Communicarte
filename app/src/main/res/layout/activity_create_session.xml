<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cormacclancyruiz.communicarte.CreateSession">

    <Button
        android:text="Generate session key"
        android:textColor="#ffffff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:id="@+id/generate_key"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:elevation="0dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/session_keyID"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:layout_alignBaseline="@+id/generate_key"
        android:layout_alignBottom="@+id/generate_key"
        android:layout_toEndOf="@+id/generate_key"
        android:layout_marginStart="42dp"
        android:textSize="18sp"
        android:textColor="#34148c"
        android:textStyle="normal|bold" />

</RelativeLayout>
